<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.chenbxxx.webdemo.mapper.ProductMapper">
    <resultMap id="product" type="top.chenbxxx.webdemo.entity.Product">
        <id column="id" property="id"/>
        <result column="product_name" property="productName"/>
        <result column="product_num" property="productNum"/>
        <result column="product_smt_create" property="productSmtCreate"/>
    </resultMap>

    <select id="selectById" resultMap="product" parameterType="java.lang.Integer">
        SELECT * FROM t_product WHERE id = #{id};
    </select>
</mapper>