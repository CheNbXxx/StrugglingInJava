<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.chenbxxx.rabbitmq.mapper.ProductMapper">
    <resultMap id="baseProduct" type="top.chenbxxx.rabbitmq.entity.Product">
        <id column="id" property="id"/>
        <result column="product_name" property="productName"/>
        <result column="product_num" property="productNum"/>
        <result column="product_smt_create" property="productSmtCreate"/>
    </resultMap>

    <select id="getById" resultMap="baseProduct" parameterType="java.lang.Long">
        SELECT * FROM product WHERE id = #{id};
    </select>
</mapper>