<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- 数据库相关 -->
    <!-- 数据源配置 -->
    <bean class="com.alibaba.druid.pool.DruidDataSource" id="dataSource" init-method="init" destroy-method="close">
        <property name="url" value="jdbc:mysql://localhost:3306/ssm_test"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
    </bean>

    <!-- 会话工厂配置 -->
    <bean class="org.mybatis.spring.SqlSessionFactoryBean" id="sqlSessionFactory">
        <property name="dataSource" ref="dataSource"/>
        <property name="typeAliasesPackage" value="chenbxxx.dto"/>
        <property name="failFast" value="true"/>
        <property name="configLocation" value="mybatis-config.xml"/>
        <!--<property name="mapperLocations" value="classpath*:chenbxxx/mapper/*.xml"/>-->
    </bean>

    <!-- mapper映射类配置 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <!-- 配置属性过期 -->
        <!--<property name="sqlSessionFactory" ref="sqlSessionFactory"/>-->
        <property name="basePackage" value="chenbxxx.mapper" />
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    </bean>
</beans>